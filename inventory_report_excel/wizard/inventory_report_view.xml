<?xml version="1.0" encoding="UTF-8"?>
<odoo>

   
    <record id="inventory_report_view_form" model="ir.ui.view">
        <field name="name">inventory.report.excel.form</field>
        <field name="model">inventory.report.excel</field>
        <field name="arch" type="xml">
            <form string="Inventory Report">
              <sheet>
                 <group >
                    <group string="Dates">
                        <field name="inv_report" readonly="1" filename="file_name"/> 
                        <field name="date_start" attrs="{'readonly':[('inv_printed','=',True)]}"/>
                        <field name="date_end" attrs="{'readonly':[('inv_printed','=',True)]}"/>
                    </group>
                    <group string="Filter By">
                           
                                <field name="filter_by"/>
                                <field name="location_type"/>
                                <field name="company_id"/>
                    </group>

                   
                   <group>
                        <field  name="category_id" 
                                attrs=" {'invisible':[('filter_by','!=','category')],
                                    'required':[('filter_by','=','category')]}"
                                options="{'no_create': True}" />

                        <field  name="product_ids" 
                                attrs="{'invisible':[('filter_by','!=','product')],
                                    'required':[('filter_by','=','product')]}"
                                options="{'no_create': True}"/>


                         <field  name="warehouse_id" 
                                attrs=" {'invisible':[('location_type','!=','warehouse')]}"
                                options="{'no_create': True}" />

                        <field  name="location_id" 
                                attrs="{'invisible':[('location_type','!=','location')]}"
                                options="{'no_create': True}"/>

                      
                    </group>
                    <group>
                        <field name="inv_printed" invisible="1"/> 

                        <field name="file_name" invisible="1"/>
                    </group>               
                    </group>  


              </sheet>
                  
              <footer>
                <button string="Count" type="object" name="generate_report" class="oe_highlight" attrs="{'invisible':[('inv_printed','=',True)]}"/>
                <button string="Cancel" special="cancel" type="object" class="btn btn-secondary oe_inline"/>
              </footer>
            </form>
        </field>
    </record>






    <record id="action_for_inventory_report" model="ir.actions.act_window">
        <field name="name">Inventory Report Excel</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">inventory.report.excel</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="inventory_report_view_form"/>
        <field name="target">new</field>
    </record>

       <menuitem id="menu_inventory_report_action" 
        action="action_for_inventory_report"
        parent="stock.menu_warehouse_report"/>
       
</odoo>
