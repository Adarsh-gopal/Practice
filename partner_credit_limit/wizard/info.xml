<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_credit_limit_coustom_view_form" model="ir.ui.view">
        <field name="name">sale.credit.limit.custom.form</field>
        <field name="model">credit.info</field>
        <field name="arch" type="xml">
            <form string="Credit Limit">
                <group>
                    <group>
                        <field name="name" readonly='1'/>
                        <field name="credit_days" readonly='1'/>
                        <field name="additional_credit_days" readonly='1'/>
                        <field name="total_outstanding_as_on_date" readonly='1'/>
                        <field name="over_credit_days" readonly='1'/>
                        <field name="over_credit_limit" readonly='1'/>
                    </group>
                    <group>
                        <field name="next_payment_date" readonly='1'/>
                        <field name="next_payment_amt" readonly='1'/>
                        <field name="sale_last" readonly='1'/>
                        <field name="collection_last" readonly='1'/>
                        <field name="last_payment" readonly='1'/>
                        <field name="last_payment_date" readonly='1'/>
                    </group>
                </group>
                <footer>
                    <button string="Close" class="btn-default" special="cancel"/>   
                </footer>
               
                    <!-- <button name="process_credit" string="Apply" type="object" class="oe_highlight"/> -->
                    <!-- <button special="cancel" string="Cancel"/> -->
                
            </form>
        </field>
    </record>
</odoo>