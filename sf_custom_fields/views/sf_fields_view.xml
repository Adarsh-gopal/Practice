<odoo>
    
    <record id="sf_purchase_order_form_custom_inherit" model="ir.ui.view">
        <field name="name">sf purchase order form custom inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='date_planned']" position="attributes">
                <attribute name="string">ETA</attribute>
            </xpath>

            <!-- <xpath expr="//field[@name='product_qty']" position="attributes">
                 <attribute name="invisible">1</attribute>
            </xpath> -->
            <!-- <xpath expr="//field[@name='product_qty']" position="after">
                 <field name="product_qty" string='Quantity'/>
            </xpath> -->
            <!-- Added By Lokesh at 17-06-2020 -->
            <xpath expr="//page[@name='purchase_delivery_invoice']/group/group" position="inside">
                <field name="despatch_by" string='Despatch By'/>
                <field name="despatch_through" string='Despatch Through'/>
                <field name="ex_godown" string='Ex Godown'/>
                <field name="property_payment_term_id" string='Payment Method'/>
            </xpath>
        </field>
    </record>

    <record id="account_payment_form_view_inherit_fields" model="ir.ui.view">
        <field name="name">account.payment.form .inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <field name='partner_id' position='after'>
                <field name='cheque_number'/>
                <field name='cheque_date'/>
                <field name='customer_vendor_bank_name'/>
                <field name='payer_payee'/>
            </field>

        </field>
    </record>

    <record id="payment_custom_form_fields" model="ir.ui.view">
        <field name="name">payment.custom.form .inherit</field>
        <field name="model">payment.custom</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name='name'/>
                        <field name='description'/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record id="account_move_form_view_inherit_fields" model="ir.ui.view">
        <field name="name">account.move.form .inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@id='header_right_group']" position='after'>
                <group attrs="{'invisible':[('type','!=','out_invoice')]}">
                    <field name='destination'/>
                    <field name='vehicle_number'/>
                    <field name='eway_bill_number'/>
                    <field name='lr_way_bill_number'/>
                    <field name='lr_way_bill_date'/>
                    <field name='payment'/>
                    <field name='transporter' options="{'no_create': True}"/>
                    <field name='customer_order_date'/>
                <field name='customer_order_number'/>
                </group>
            </xpath>
            <!-- Added By Lokesh at 17-06-2020 -->
            <xpath expr="//page[@name='other_info']/group" position="inside">
                <group string="Others" name="sf_info_group" >
                    <field name="despatch_by" string='Despatch By'/>
                    <field name="despatch_through" string='Despatch Through'/>
                    <field name="ex_godown" string='Ex Godown'/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="sale_order_form_view_inherit_fields" model="ir.ui.view">
        <field name="name">sale.order.form .inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name='payment_term_id' position='after'>
                <field name='payment'/>
                <field name='transporter' options="{'no_create': True}"/>
                <field name='customer_order_date'/>
                <field name='customer_order_number'/>
            </field>
        </field>
    </record>

   <record id="sale.action_orders" model="ir.actions.act_window">
            <field name="domain">[('state', 'not in', ('draft', 'sent','to approve','approved','waiting_for_approval','credit','to_confirm','revised', 'cancel'))]</field>
        </record>

        <record id="view_partner_form_inherites4" model="ir.ui.view">
            <field name="name">res.partner.view.form.inherit4</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook/page[2]/group//field[@name='property_payment_term_id']" position="after">
                    <field name='incoterms'/>
                    <field name="z_user_id"/>
                    <field name="z_payment_custom"/>
                </xpath>
                 <!-- added xpath for compliance fields -->
                <xpath expr="//form/sheet/notebook/page[@name='internal_notes']" position="after">
                    <page name="compliance" string="Compliance Fields">
                        <group>
                            <group>
                                <field name="cin_number"/>
                                <field name="registraion_date"/>
                                <field name="iec_number"/>
                                <field name="tan_number"/>
                                <field name="msme_adhar_number"/>
                                <field name="customer_rating"/>
                                <field name="business_plan"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
                   


        <record id="view_stock_move_line_detailed_operation_tree_inherit" model="ir.ui.view">
        <field name="name">stock.move.line.operations.tree.inherit</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='qty_done']" position="before">
                <field name="package_ids"/>
                <field name="no_bags" string="Pkg"/>
                <!-- <field name="location_processed" invisible="1"/> -->
            </xpath>
        </field>
    </record> 

     <record id="view_mrp_work_center_inherit" model="ir.ui.view">
        <field name="name">mrp.work.center.inherit</field>
        <field name="model">mrp.routing.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_routing_workcenter_form_view"/>
        <field name="arch" type="xml">
            <notebook>
                <page name='step' string='Steps'>
                    <field name="z_steping_id" widget="section_and_note_one2many">
                        <tree editable='bottom'>
                            <field name='discription'/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <record model="ir.ui.view" id="mrp_production_workorder_form_view_inherit2">
        <field name="name">mrp.production.work.order.form</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_form_view_inherit"/>
        <field name="arch" type="xml">
            <field name='finished_lot_id' position='after'>
                <field name='ref'/>
            </field>
            <notebook>
                <page name='step' string='Steps'>
                    <field name="temp_id" widget="section_and_note_one2many">
                        <tree editable='bottom'>
                            <field name='description'/>
                            <field name='start_time'/>
                            <field name='end_time'/>
                            <field name='temp'/>
                            <field name='ph'/>
                            <field name='volumn'/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

<!-- tab by shashank on 30-06-2020 -->
    <record model="ir.ui.view" id="product_template_form_view_inherit">
        <field name="name">product.template.complaince.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook" position="inside">
                <page name="compliance" string="Compliance Fields">
                    <group>
                        <group>
                            <field name="chemical_name"/>
                            <field name="cas"/>
                            <field name="sds"/>
                            <field name="hazard_class"/>
                            <field name="risk_phrases"/>
                            <field name="safety_phrases"/>
                            <field name="zdhc_approved"/>
                            <field name="gots_approved"/>
                            <field name="shel_life"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
