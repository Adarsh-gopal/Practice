<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>


        <record id="view_picking_type_form_inherit1" model="ir.ui.view">
            <field name="name">stock.picking.type</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form"/>
            <field name="arch" type="xml"> 

            <field name='show_operations' position='after'>
            <field name='interchange'/>
            </field>           

                

            </field>
        </record>



         <record id="view_picking_form_custom_inherit_locations" model="ir.ui.view"> 
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                
              
                <field name='location_dest_id' position='after'>
                    <field name='chnage_location' invisible='1'/>
                </field>
              
                
            </field>
        </record>


<record id="view_stock_move_line_detailed_operation_tree_inherit" model="ir.ui.view">
            <field name="name">stock.move.line.operations.tree</field>
            <field name="model">stock.move.line</field>
            <field name="priority">1000</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
            <field name="arch" type="xml">

                <xpath expr="/tree/field[@name='lot_id']" position="after">
                   <field name="chnage_locations" 
                    attrs="{'column_invisible': [('parent.chnage_location', '=', False)]}"/>
               </xpath>
            </field>
        </record>
        

   </data>     
</odoo>